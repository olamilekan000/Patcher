{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start:firebase": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "ts-node-dev --respawn ./src/app.ts",
    "test": "export NODE_ENV=TEST&& mocha --timeout 5000 --exit --require ts-node/register --colors tests/**/*.ts",
    "coverage": "nyc npm run test",
    "start": "node ./lib/app.js",
    "docs": "apidoc -i lib/ -o apidoc/",
    "start:image": "node app"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/server/index.js",
  "dependencies": {
    "@google-cloud/logging": "^5.4.1",
    "@google-cloud/storage": "^3.5.0",
    "@types/debug": "^4.1.5",
    "@types/json-patch": "0.0.30",
    "@types/multer": "^1.3.10",
    "@types/sharp": "^0.23.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0",
    "helmet": "^3.21.1",
    "http-server": "^0.11.1",
    "jsonpatch": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "sharp": "^0.23.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.20",
    "@types/morgan": "^1.7.37",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
